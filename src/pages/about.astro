  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 1rem;
    color: #2c3e50;
  }

  section {
    margin-bottom: 2rem;
  }

  p {
    color: #7f8c8d;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  a {
    color: #3498db;
    text-decoration: none;
    transition: color 0.2s;
  }

  a:hover {
    color: #2980b9;
    text-decoration: underline;
  }

  ul {
    margin-left: 1.5rem;
    color: #7f8c8d;
    line-height: 1.8;
  }

  ul li {
    margin-bottom: 0.5rem;
  }

